{% extends 'base.html.twig' %}

{% block title %}Détail de {{ artiste.pseudo }}{% endblock %}

{% block body %}

<div class="page-title">
    <h1>{{ artiste.pseudo }}</h1>
</div>

<div class="container">
    <h2>Morceaux disponibles</h2>
    <ul>
        {% for track in tracks %}
            <li>{{ track.trackName }} ({{ track.duration }} sec)</li>
        {% else %}
            <li>Aucun morceau trouvé.</li>
        {% endfor %}
    </ul>


    <a href="{{ path('app_home') }}">Retour à l'accueil</a>

</div>

{% endblock %}
