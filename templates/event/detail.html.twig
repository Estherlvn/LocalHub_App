{% extends 'base.html.twig' %}

{% block title %}D√©tail de l'√©v√©nement{% endblock %}

{% block stylesheets %}
    <!-- Feuille de style Leaflet (Recommand√©e par Leaflet.js) -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin=""/>
    <link rel="stylesheet" href="{{ asset('styles/event.css') }}">
{% endblock %}

{% block navbar %}
    {% include 'partials/navleft.html.twig' %}
{% endblock %}

{% block body %}


<div class="container">
    {% if is_granted('ROLE_ARTISTE') %}
    <a href="{{ path('event_artiste') }}" class="btn">Retour √† la liste</a>
    {% else %}
    <a href="{{ path('event_auditeur') }}" class="btn">Retour √† la liste</a>
    {% endif %}
    

    <h1>{{ event.eventTitle }}</h1>

    <div class="event-info">
        <div class="event-img">
            {% if event.eventPicture %}
            <img src="{{ asset('uploads/' ~ event.eventPicture) }}" class="event-image" alt="Image de {{ event.eventTitle }}">
        {% else %}
            <img src="{{ asset('images/default_event.png') }}" class="event-image" alt="Image concert">
        {% endif %}
        </div>

        <div class="event-description">
        <p>{{ event.eventDescription }}</p>
        </div>

    </div>

    <div>
        <p class="event-date">üìÖ Date : {{ event.eventDate|date('d/m/Y') }}</p>
        <p class="event-location">üìç Lieu : {{ event.eventLocation }}</p>
    </div>

  
    <div class="map">
        <h2>Localisation de l‚Äô√©v√©nement</h2>
        <div id="map"></div> <!-- La carte sera stylis√©e dans `event.css` -->
    </div>

</div>

{% block javascripts %}
    <!-- Script Leaflet (Doit √™tre charg√© apr√®s le CSS) -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            let latitude = {{ event.latitude|default(0) }};
            let longitude = {{ event.longitude|default(0) }};
            let address = "{{ event.eventLocation }}"; 

            if (latitude !== 0 && longitude !== 0) {
                let map = L.map('map').setView([latitude, longitude], 13);

                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; OpenStreetMap contributors'
                }).addTo(map);

                L.marker([latitude, longitude]).addTo(map)
                    .bindPopup("<b>" + address + "</b>")
                    .openPopup();
            } else {
                document.getElementById('map').innerHTML = "<p class='error-message'>Coordonn√©es GPS indisponibles pour cet √©v√©nement.</p>";
            }
        });
    </script>
{% endblock %}
{% endblock %}
