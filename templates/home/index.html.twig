{% extends 'base.html.twig' %}

{% block title %}HomePage{% endblock %}

{% block body %}

<div class="main">

<div class="accueil">
    <img src="{{ asset('img/background.jpg') }}" alt="Image d'illustration avec foule dans un concert festival" class="background">

    <div class="page-title">
        <h1>LocalHub, faites rayonner la scène locale</h1>
        <h2>Rejoignez-nous dès maintenant pour célébrer la musique de votre région</h2>
    </div>

    <div class="auth-buttons">
            <a href="{{ path('app_register') }}" class="btn-log">S'inscrire</a>
            <a href="{{ path('app_login') }}" class="btn-log">Se connecter</a>
    </div>

</div>  


    <div class="container">
        <div>
            <h2>Les Artistes à la Une</h2>
                <ul>
                    {% for artiste in artistes %}
                        <li>
                            {{ artiste.pseudo }} -
                            <a href="{{ path('artiste_detail', { 'id': artiste.id }) }}">Voir détail</a>
                        </li>
                    {% else %}
                        <li>Aucun artiste trouvé.</li>
                    {% endfor %}
                </ul>
        </div>

        <div>
            <h2>Derniers Titres ajoutés</h2>
                <ul>
                    {% for track in latestTracks %}
                        <li>
                            {{ track.trackName }}
                        </li>
                    {% else %}
                        <li>Aucun morceau disponible.</li>
                    {% endfor %}
                </ul>
        </div>

        <div>
            <h1>Artistes par Région</h1>
            <ul>
                {% for region in regions %}
                    <li>
                        <strong>{{ region.region }}</strong>  
                        (Département : {{ region.departement }} - {{ region.total_artistes }} artistes)
                        <a href="{{ path('artistes_par_region', {'departement': region.departement}) }}">
                            Voir les artistes
                        </a>
                    </li>
                {% else %}
                    <li>Aucun artiste trouvé.</li>
                {% endfor %}
            </ul>
        </div>

    </div>
</div>

{% endblock %}